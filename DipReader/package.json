{
  "name": "dip-reader",
  "version": "0.0.0",
  "main": "dist-main/main.js",
  "scripts": {
    "setup:download-models": "tsc -p tsconfig.download.json && node dist-main/download-models.js",
    "setup:models": "npm run setup:download-models",
    "setup": "npm install && npm run setup:models",
    "build": "tsc -p tsconfig.main.json && cp schema.sql dist-main/ && cp -r assets dist-main/ && ng build --base-href /",
    "build:prod": "tsc -p tsconfig.main.json && cp schema.sql dist-main/ && cp -r assets dist-main/ && ng build --configuration production --base-href /",
    "start": "electron .",
    "start:ubuntu": "electron . --disable-gpu --no-sandbox",
    "start:ubuntu-x11": "electron . --ozone-platform=x11",
    "dev": "npm run build && npm run start",
    "dev:ubuntu": "npm run build && npm run start:ubuntu",
    "dev:ubuntu-x11": "npm run build && npm run start:ubuntu-x11",
    "rebuild": "electron-rebuild -f -w better-sqlite3 && electron-rebuild -f -w onnxruntime-node",
    "dist": "ng build --configuration production --base-href / && electron-builder",
    "clean": "rm -rf dist dist-main dist-electron node_modules/.vite"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.6.2",
    "electron-squirrel-startup": "^1.0.1",
    "fast-xml-parser": "^5.3.3",
    "onnxruntime-node": "^1.20.1",
    "sharp": "^0.34.5",
    "sqlite-vss": "^0.1.2",
    "tslib": "^2.3.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^20.0.6",
    "@angular/compiler-cli": "^21.0.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.3",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.5",
    "@types/xmldom": "^0.1.34",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "build": {
    "appId": "com.dipreader.app",
    "productName": "DipReader",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/DipReader/**/*",
      "dist-main/**/*",
      "package.json",
      "schema.sql"
    ],
    "extraResources": [
      {
        "from": "dist-main/assets/models",
        "to": "assets/models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    },
    "asar": true,
    "asarUnpack": [
      "**/better-sqlite3/**/*",
      "**/onnxruntime-node/**/*",
      "**/sharp/**/*"
    ]
  }
}
