{
  "name": "dip-reader",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "electron": "ng build --base-href / && electron .",
    "electron:ubuntu": "ng build --base-href / && electron . --ozone-platform=x11",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3 && electron-rebuild -f -w onnxruntime-node",
    "dist": "ng build --configuration production --base-href / && electron-builder",
    "clean": "rm -rf dist dist-electron node_modules/.vite"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.6.2",
    "electron-squirrel-startup": "^1.0.1",
    "fast-xml-parser": "^5.3.3",
    "onnxruntime-node": "^1.20.1",
    "rxjs": "~7.8.0",
    "sharp": "^0.34.5",
    "sqlite-vec": "^0.1.7-alpha.2",
    "sqlite-vss": "^0.1.2",
    "tslib": "^2.3.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^20.0.6",
    "@angular/compiler-cli": "^21.0.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "build": {
    "appId": "com.dipreader.app",
    "productName": "DipReader",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/DipReader/**/*",
      "main.js",
      "preload.js",
      "db-handler.js",
      "indexer-main.js",
      "ai-search.js",
      "package.json",
      "public/schema.sql"
    ],
    "extraResources": [
      {
        "from": "dist/DipReader/browser/assets/models",
        "to": "assets/models",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    },
    "asar": true,
    "asarUnpack": [
      "**/better-sqlite3/**/*",
      "**/onnxruntime-node/**/*",
      "**/sharp/**/*"
    ]
  }
}
