{
  "name": "dip-reader",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build --base-href / && electron .",
    "electron-ubuntu": "ng build --base-href / && electron . --ozone-platform=x11",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3",
    "dist": "ng build --configuration production --base-href / && electron-builder",
    "clean": "rm -rf dist dist-electron node_modules/.vite"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "better-sqlite3": "^12.6.2",
    "@sqliteai/sqlite-wasm": "^3.50.4-sync.0.8.63-vector.0.9.70",
    "@xenova/transformers": "^2.17.2",
    "electron-squirrel-startup": "^1.0.1",
    "fast-xml-parser": "^5.3.3",
    "onnxruntime-web": "^1.24.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^20.0.6",
    "@angular/compiler-cli": "^21.0.0",
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "build": {
    "appId": "com.dipreader.app",
    "productName": "DipReader",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/DipReader/**/*",
      "main.js",
      "preload.js",
      "db-handler.js",
      "indexer-main.js",
      "ai-search.js",
      "package.json",
      "public/schema.sql"
    ],
    "extraResources": [
      {
        "from": "dist/DipReader/browser/assets/models",
        "to": "assets/models",
        "filter": ["**/*"]
      },
      {
        "from": "dist/DipReader/browser/assets/onnx-wasm",
        "to": "assets/onnx-wasm",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "portable"
    },
    "asar": true
  }
}
